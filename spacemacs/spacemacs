;; List of configuration layers to load.
dotspacemacs-configuration-layers
'(
  python
  ivy
  emacs-lisp
  git
  org
  themes-megapack
)

;; Switches the vim mode escape sequence to "jk"
(defun dotspacemacs/user-config ()
  (setq-default evil-escape-key-sequence "jk")
  (setq powerline-default-separator "slant")
)

;; Fixes the crappy rendering of the powerline.
;; Changing scale didn't help, so I set it back to 1.1
;; This was no longer needed once I changed the
;; powerline-default-separator to 'slant'
;;
;; dotspacemacs-mode-line-unicode-symbols nil

