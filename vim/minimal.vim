" Set commands
"""""""""""""""""""""""""""""""""""""""
" number of VISUAL spaces per TAB
" Use spaces instead of tabs
set tabstop=2
set shiftwidth=2
set expandtab
" enable line numbers
set number
" Use system keyboard
set clipboard+=unnamedplus

" jk is escape
inoremap jk <esc>

" set-colorscheme
colorscheme paramount
